# 1 >> create a standart directory tree.
mkdir -v /bin
mkdir -v /boot
mkdir -pv /etc/sysconfig
mkdir -v /home
mkdir -pv /lib/firmware
mkdir -v /mnt
mkdir -v /opt
mkdir -v /sbin
mkdir -v /srv
mkdir -v /var

install -dv -m 0750 /root
install -dv -m 1777 /tmp /var/tmp

mkdir -pv /usr/bin
mkdir -v /usr/include
mkdir -v /usr/lib
mkdir -v /usr/sbin
mkdir -v /usr/src

mkdir -v /usr/share
mkdir -v /usr/share/color
mkdir -v /usr/share/dict
mkdir -v /usr/share/doc
mkdir -v /usr/share/info
mkdir -v /usr/share/locale
mkdir -v /usr/share/man

mkdir -v /usr/share/misc
mkdir -v /usr/share/terminfo
mkdir -v /usr/share/zoneinfo
mkdir -v /usr/libexec

mkdir -pv /var/log
mkdir -v /var/mail
mkdir -v /var/spool

ln -sv /run /var/run
ln -sv /run/lock /var/lock

mkdir -v /var/opt
mkdir -v /var/cache
mkdir -pv /var/lib/color
mkdir -v /var/lib/misc
mkdir -v /var/lib/locate
mkdir -v /var/local
