#! /bin/bash

./configure --prefix=/usr \
            --localstatedir=/var \
            --disable-logger     \
            --disable-whois      \
            --disable-rcp        \
            --disable-rexec      \
            --disable-rlogin     \
            --disable-rsh        \
            --disable-servers  &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make install -j1" 
