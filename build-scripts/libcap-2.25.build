#! /bin/bash

sed -i '/install.*STALIBNAME/d' libcap/Makefile
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make RAISE_SETFCAP=no lib=lib prefix=/usr install -j1" &&
chmod -v 755 /usr/lib/libcap.so &&
porg -lD+ "mv -v /usr/lib/libcap.so.* /lib" &&
porg -lD+ "ln -sfv ../../lib/$(readlink /usr/lib/libcap.so) /usr/lib/libcap.so"
