#! /bin/bash

./configure --prefix=/usr \
            --bindir=/bin          \
            --sysconfdir=/etc      \
            --with-rootlibdir=/lib \
            --with-xz              \
            --with-zlib  &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make install -j1" &&
for target in depmod insmod lsmod modinfo modprobe rmmod; do
  porg -lD+ "ln -sfv ../bin/kmod /sbin/$target"
done
porg -lD+ "ln -sfv kmod /bin/lsmod"
