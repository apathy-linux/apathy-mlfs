#! /bin/bash

./configure --prefix=/usr     \
            --bindir=/bin     \
            --disable-static  \
            --sysconfdir=/etc \
            --docdir=/usr/share/doc/attr-2.4.48
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make install -j1 " &&
porg -lD+ "mv -v /usr/lib/libattr.so.* /lib" &&
porg -lD+ "ln -sfv ../../lib/$(readlink /usr/lib/libattr.so) /usr/lib/libattr.so"
