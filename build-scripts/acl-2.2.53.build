#! /bin/bash
./configure --prefix=/usr         \
            --bindir=/bin         \
            --disable-static      \
            --libexecdir=/usr/lib \
            --docdir=/usr/share/doc/acl-2.2.53 &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make install -j1 " &&
porg -lD+  "mv -v /usr/lib/libacl.so.* /lib" &&
porg -lD+  "ln -sfv ../../lib/$(readlink /usr/lib/libacl.so) /usr/lib/libacl.s"

