#! /bin/bash

./configure --prefix=/usr                       \
            --docdir=/usr/share/doc/bash-4.4.18 \
            --without-bash-malloc               \
            --with-installed-readline &&
read -p "Compile? " && make -j2 && 
read -p "Install? " && porg -lD "make install -j1" &&
porg -lD+ "mv -vf /usr/bin/bash /bin"
